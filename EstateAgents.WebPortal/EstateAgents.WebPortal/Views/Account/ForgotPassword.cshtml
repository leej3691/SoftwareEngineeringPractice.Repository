@model EstateAgents.WebPortal.Models.ForgotPasswordViewModel

<ul class="breadcrumb hidden-xs">
    <li>
        <a href="/Home/Index">Home</a>
    </li>
    <li>
        <a href="/Account/Login">Login</a>
    </li>
    <li>
        Forgot Password
    </li>
</ul>

<div class="jumbotron hidden-xs">
    <h1><i class="fa fa-lock text-success"></i> Forgot Password</h1>
    <p class="lead">Enter your email below and we'll send you a reset link.</p>
</div>

@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <h4 class="sample-header">Forgot Password</h4>
    <div class="row sample-content" style="margin-left:0;margin-right:0;margin-bottom:20px;">
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" , placeholder = "Enter your email address"})
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-success btn-block" value="Email Link" />
            </div>
        </div>
    </div> 
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
