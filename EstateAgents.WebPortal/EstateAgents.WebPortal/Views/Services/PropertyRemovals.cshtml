@model EstateAgents.WebPortal.Models.Services.PropertyRemovalsViewModel

<ul class="breadcrumb hidden-xs">
    <li>
        <a href="/Home/Index">Home</a>
    </li>
    <li>
        Property Removals
    </li>
</ul>

<div class="jumbotron">
    <h1>
        <i class="fa fa-exchange text-success hidden-xs"></i>
        Request Removals
    </h1>
    <p>Please use the form below to request removals on your property.</p>
</div>

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("PropertyRemovalsRequest", "Services", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {

            <h4 class="sample-header">Property Removals</h4>
            <div class="row sample-content" style="margin-left:0;margin-right:0;margin-bottom:20px;">

                @Html.HiddenFor(m => m.ClientId)
                <div class="form-group">
                    @Html.LabelFor(m => m.AddressLine1, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.AddressLine1, new { @class = "form-control", placeholder = "Enter your address line 1" })
                        @Html.ValidationMessageFor(m => m.AddressLine1, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.AddressLine2, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.AddressLine2, new { @class = "form-control", placeholder = "Enter your address line 2" })
                        @Html.ValidationMessageFor(m => m.AddressLine2, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.AddressLine3, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.AddressLine3, new { @class = "form-control", placeholder = "Enter your address line 3" })
                        @Html.ValidationMessageFor(m => m.AddressLine3, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.AddressLine4, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.AddressLine4, new { @class = "form-control", placeholder = "Enter your address line 4" })
                        @Html.ValidationMessageFor(m => m.AddressLine4, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Postcode, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Postcode, new { @class = "form-control", placeholder = "Enter your postcode" })
                        @Html.ValidationMessageFor(m => m.Postcode, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.FurtherDetails, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(m => m.FurtherDetails, new { @class = "form-control", placeholder = "Enter further details" })
                        @Html.ValidationMessageFor(m => m.FurtherDetails, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-block btn-success" value="Submit" />
                    </div>
                </div>

            </div>
        }
    </div>
</div>