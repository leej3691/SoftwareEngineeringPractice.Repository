@model EstateAgents.WebPortal.Models.Properties.PropertyShowRoomViewModel
<ul class="breadcrumb hidden-xs">
    <li>
        <a href="/Home/Index">Home</a>
    </li>
    <li>
        Property Showroom
    </li>
</ul>

<div class="jumbotron">
    <h1>
        <i class="fa fa-wpforms text-success hidden-xs"></i>
        Property Showroom
    </h1>
    <p>Properties for sale</p>
</div>

<div class="list-group">

    


    <table id="dtShowroom" class="table table-striped table-bordered table-responsive">
        <thead>
            <tr>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model.PropertyList)
            {
                @*<tr>
                    <td>
                        <a href="/Property/PropertyDetails/@item.Id" class="list-group-item">

                            <h3>
                                @item.AddressLine1
                            </h3>

                            <img style="max-width:130px; margin-right:10px; margin-bottom:10px;" class="img-responsive pull-left" src="https://pbprodimages.azureedge.net/images/large/c292d1fb-2b4b-4004-9a88-fa6ff0c3d0c0.JPG" />
                            <p>
                                Test information to go here
                            </p>
                            <span class="text-success">Continue Reading</span>
                            <br />
                            @item.PostedDate

                            <br style="clear: both;" />

                        </a>
                    </td>
                </tr>*@

            <tr>
                <div class="PropertyDetailsMainAddress list-group-item">
                    <div class="PropertyDetailsPrimary">
                        @{
                            string PropertyType = item.NumberOfBedrooms + " bedroom Detached";
                        }
                        <h1 class="PropertyDetailsAddressType">@PropertyType</h1>
                        <p>
                            <span class="PropertyDetailsAddress">@item.AddressLine1, @item.AddressLine2, @item.AddressLine3, @item.AddressLine4, @item.AddressLine5, @item.Postcode</span>
                        </p>
                    </div>
                    <div class="PropertyDetailsSecondary">
                        <p class="PropertyDetailsPrice">
                            @{
                                int price = (int)Math.Round(item.PropertyPrice);
                                string PriceFinal = String.Format("{0:C0}", price);
                            }
                            <span>@PriceFinal</span>
                        </p>
                        <p class="PropertyDetailsQualifier">
                            <span>Offers in excess of</span>
                        </p>
                        @if (item.PropertyStatusId == 3)
                        {
                            <span class="PropertyDetailsSold">Sold STC</span>
                        }

                    </div>
                </div>
            </tr>
            }

        </tbody>
    </table>

</div>

@section FooterScripts {
    @Scripts.Render("~/scripts/jquery-datatables");
    @Scripts.Render("~/scripts/jquery-datatables-bootstrap");
    @Scripts.Render("~/scripts/local-datatables");
    <script>
        var dt = $('.dtShowroom').DataTable({
            scrollCollapse: true,
            deferRender: true,
            scroller: true,
            bLengthChange: false,
            bInfo: false,
            paging: false,
            order: [],
            searching: false
        });
    </script>
}