@model EstateAgents.WebPortal.Models.Properties.PropertyDetailsViewModel
@{
    ViewBag.Title = "Home Page";
}

<ul class="breadcrumb hidden-xs">
    <li>
        <a href="/Home/Index">Home</a>
    </li>
    <li>
        <a href="/Property/PropertyShowroom">Property Showroom</a>
    </li>
    <li>
        Property Details
    </li>
</ul>

<div class="PropertyDetailsMainAddress">
    <div class="PropertyDetailsPrimary">
        @{
            string PropertyType = Model.PropertyDetails.NumberOfBedrooms + " bedroom " + Model.PropertyTypeDescription;
        }
        <h1 class="PropertyDetailsAddressType">@PropertyType</h1>
        <p>
            <span class="PropertyDetailsAddress">@Model.PropertyDetails.AddressLine1, @Model.PropertyDetails.AddressLine2, @Model.PropertyDetails.AddressLine3, @Model.PropertyDetails.AddressLine4, @Model.PropertyDetails.AddressLine5, @Model.PropertyDetails.Postcode</span>
        </p>
    </div>
    <div class="PropertyDetailsSecondary">
        <p class="PropertyDetailsPrice">
            @{
                int price = (int)Math.Round(Model.PropertyDetails.PropertyPrice);
                string PriceFinal = String.Format("{0:C0}", price);
            }
            <span>@PriceFinal</span>
        </p>
        <p class="PropertyDetailsQualifier">
            <span>Offers in excess of</span>
        </p>
        @if (Model.PropertyDetails.PropertyStatusId == 3)
        {
            <span class="PropertyDetailsSold">Sold STC</span>
        }

    </div>
</div>

<div class="row">
    <div col-md-12>
        <div style="text-align: left;">
            <ul>
                <li class="op1" style="margin-left: 0;width: auto;display: inline-block;">
                    <a href="#" class="photos active" style="color: #4d949b;font-size: 16px;text-decoration: none;background-color: transparent;"><i class="fa fa-camera"></i> photos</a>
                </li>
                <li class="op1" style="margin-left: 0;    width: auto;display: inline-block;">
                    <a href="#" class="map" style="font-size: 16px;padding-left: 30px;position: relative;color: #aaabab;text-decoration: none;background-color: transparent;"><i class="fa fa-map-marker"></i> map</a>
                </li>
                <li class="op2" style="width: auto;margin-left: 15px;display: inline-block;box-sizing: border-box;    list-style-type: none;">
                    <a href="#" class="floorplan" style="margin: 22px 0;position: relative;font-size: 16px;padding-left: 15px;   background-color: transparent;   text-decoration: none;  color: #aaabab;"><i class="fa fa-key"></i> floor plan</a>
                </li>
            </ul>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-9">
        <div class="PropertyDetailsImageView" style="position: relative;margin-left:15px;width: 760px;">

            <div class="PropertyDetailsPhotos" style="display:none;">
                @{
                    int ImageCount = 0;
                }
                @foreach (var item in Model.PropertyImages)
                {
                    ImageCount = ImageCount + 1;
                    <div class="mySlides">
                        <div class="numbertext">@ImageCount / @Model.PropertyImagesCount</div>
                        <img src="data:image;base64,@System.Convert.ToBase64String(item.ImageData)" style="width:100%" />
                        <div class="caption-container">
                            <p id="caption">@item.Description</p>
                        </div>
                    </div>
                }

                <!-- Next and previous buttons -->
                <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                <a class="next" onclick="plusSlides(1)">&#10095;</a>

            </div>

            <div class="PropertyDetailsMap">
                <div class="row">
                    <div class="form-group">
                        <div class="col-sm-9 col-md-12 col-lg-12 ">
                            <div id="map"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="mainRight text-left" style="float: right;width: 300px;height: 546px;position: relative;margin-right:15px;">
            <div class="links">
                @if (Model.PropertyDetails.PropertyStatusId == 3)
                {
                    <a class="btn btn-info" disabled style="  white-space: nowrap;padding: 6px 12px; font-size: 16px;line-height: 1.42857; margin-top: 0;margin-bottom: 10px; width: 100%;background-color: #1fabde; text-align: center; vertical-align: middle;touch-action: manipulation;cursor: pointer;background-image: none; display: inline-block;color: #fff;  border: 0; border-radius: 0;font-weight: 400; text-transform: none;text-decoration: none;" href="#">
                        Book Viewing <i class="fa fa-arrow-circle-o-right"></i>
                    </a>
                    <a class="btn btn-important" disabled style="   white-space: nowrap;padding: 6px 12px;font-size: 16px;line-height: 1.42857;    text-align: center; vertical-align: middle; touch-action: manipulation; cursor: pointer;background-image: none;    display: inline-block;    border: 0;border-radius: 0; font-weight: 400; text-transform: none;text-decoration: none;   color: #fff;background-color: #fc5465;border-color: #fc5465;  margin-top: 0;margin-bottom: 10px;width: 100%;" href="#">
                        Make an Offer <i class="fa fa-arrow-circle-o-right"></i>
                    </a>
                }

            </div>
            <p class="h3" style="text-transform: uppercase;margin: 0 0 11px;color: #4d949b;font-size: 22px;">Key Features</p>
            <ul>
                <li>No Chain</li>
                <li>No Chain</li>
                <li>No Chain</li>
                <li>No Chain</li>
                <li>No Chain</li>
                <li>No Chain</li>
                <li>No Chain</li>
            </ul>
        </div>
    </div>
</div>


<script type="text/javascript">

    var slideIndex = 1;
    showSlides(slideIndex);

    function plusSlides(n) {
        showSlides(slideIndex += n);
    }

    function showSlides(n) {
        var i;
        var slides = document.getElementsByClassName("mySlides");
        if (n > slides.length) { slideIndex = 1 }
        if (n < 1) { slideIndex = slides.length }
        for (i = 0; i < slides.length; i++) {
            slides[i].style.display = "none";
        }
        slides[slideIndex - 1].style.display = "block";
    }

    function initMap() {

        var uluru = { lat: 53.400002, lng: -2.983333 };
        var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 15,
            center: uluru
        });

        var contentString = '<div style="margin:0; padding:0">' +
            '<div style="width:100%; max-width: 300px; height:auto; margin:0; padding:0">' +
            '<h3 style="margin:0; padding:0">LJ Properties</h3>' +
            '<p>Head Office<br/ >' +
            'Liverpool<br />Merseyside<br />United Kingdom<br />' +
            '07811971637<br />' +
            '</div>' +
            '</div>';

        var infowindow = new google.maps.InfoWindow({
            content: contentString
        });

        var marker = new google.maps.Marker({
            position: uluru,
            map: map,
            title: 'LJ Properties'
        });

        infowindow.open(map, marker);

    }
</script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBAt_08hJ_QmWieRRhexmD-Pd56VrVi1aA&callback=initMap">
</script>