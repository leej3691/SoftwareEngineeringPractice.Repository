@model EstateAgents.WebPortal.Models.Messages.MessagesReplyViewModel

<ul class="breadcrumb hidden-xs">
    <li>
        <a href="/Home/Index">Home</a>
    </li>
    <li>
        <a href="/Messages/Messages">Messages</a>
    </li>
    <li>
        Messages Reply
    </li>
</ul>

<div class="jumbotron">
    <h1>
        <i class="fa fa-envelope text-success hidden-xs"></i>
        Message Reply
    </h1>
    <p>Reply to a message</p>
</div>


<div class="row" style="margin-top:-20px;">
    <div class="col-md-12">
        @using (Html.BeginForm("SendMessageReply", "Messages", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <h4 class="sample-header">Message Reply</h4>
            <div class="row sample-content" style="margin-left:0;margin-right:0;margin-bottom:20px;">

                @Html.HiddenFor(m => m.ClientId)
                <div class="form-group" style="margin-bottom:10px;">
                    @Html.LabelFor(m => m.Reply, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(m => m.Reply, new { @class = "form-control", placeholder = "Enter your reply here" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-block btn-success" value="Send" />
                    </div>
                </div>
            </div>
        }

    </div>
</div>
