@model EstateAgents.WebPortal.Models.Settings.YourDetailsViewModel

<ul class="breadcrumb hidden-xs">
    <li>
        <a href="/Home/Index">Home</a>
    </li>
    <li>
        Account
    </li>
    <li>
        Your Details
    </li>
</ul>

<div class="jumbotron">
    <h1>
        <i class="fa fa-user-circle text-success hidden-xs"></i>
        Account Details
    </h1>
    <p>Please use the form below to update your details.</p>
</div>

<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("YourDetailsUpdate", "Settings", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {

            <h4 class="sample-header">Your Details</h4>
            <div class="row sample-content" style="margin-left:0;margin-right:0;margin-bottom:20px;">
                <h3 class="col-sm-offset-3 col-lg-offset-2"><span class="block-arrow">Step 1</span>Your Details</h3>
                @Html.HiddenFor(m => m.ClientId)
                <div class="form-group">
                    @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.EnumDropDownListFor(x => x.Title, "Select Title", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Forename, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Forename, new { @class = "form-control", placeholder = "Enter your forename" })
                        @Html.ValidationMessageFor(m => m.Forename, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Surname, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Surname, new { @class = "form-control", placeholder = "Enter your surname" })
                        @Html.ValidationMessageFor(m => m.Surname, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.DateOfBirth, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.DateOfBirth, new { @class = "form-control datepicker", type = "date" })
                        @Html.ValidationMessageFor(m => m.DateOfBirth, "", new { @class = "text-danger" })
                    </div>
                </div>

                <h3 class="col-sm-offset-3 col-lg-offset-2"><span class="block-arrow">Step 2</span>Your Address</h3>

                <div class="form-group">
                    @Html.LabelFor(m => m.AddressLine1, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.AddressLine1, new { @class = "form-control", placeholder = "Enter your address line 1" })
                        @Html.ValidationMessageFor(m => m.AddressLine1, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.AddressLine2, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.AddressLine2, new { @class = "form-control", placeholder = "Enter your address line 2" })
                        @Html.ValidationMessageFor(m => m.AddressLine2, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.AddressLine3, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.AddressLine3, new { @class = "form-control", placeholder = "Enter your address line 3" })
                        @Html.ValidationMessageFor(m => m.AddressLine3, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.AddressLine4, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.AddressLine4, new { @class = "form-control", placeholder = "Enter your address line 4" })
                        @Html.ValidationMessageFor(m => m.AddressLine4, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.AddressLine5, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.AddressLine5, new { @class = "form-control", placeholder = "Enter your address line 5" })
                        @Html.ValidationMessageFor(m => m.AddressLine5, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Postcode, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Postcode, new { @class = "form-control", placeholder = "Enter your postcode" })
                        @Html.ValidationMessageFor(m => m.Postcode, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Mobile, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control", placeholder = "Enter your mobile number" })
                        @Html.ValidationMessageFor(m => m.Mobile, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-block btn-success" value="Submit" />
                    </div>
                </div>

            </div>
        }
    </div>
    <div class="col-md-6">
        <h4 class="sample-header">Change Password</h4>
        <div class="row sample-content" style="margin-left:0;margin-right:0;margin-bottom:20px;">
            <p style="margin: 0 0 11px;color: #717271;font-size: 22px;">Password</p>

            <p>Please use the below link to change your password.</p>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <a class="btn btn-success btn-block" href="/manage/changepassword">Change Password</a>
                </div>
            </div>

        </div>
    </div>
</div>