@model EstateAgents.IMS.Models.PropertyManagement.ProcessPropertyOfferViewModel

    <ul class="breadcrumb hidden-xs">
        <li>
            <a href="/Home/Index">Home</a>
        </li>
        <li>
            Property Management
        </li>
        <li>
            <a href="/PropertyManagement/ManageOffers">Manage Offers</a>
        </li>
        <li>
            Process Property Offer
        </li>
    </ul>

<div class="jumbotron">
    <h1>
        <i class="fa fa-money text-success hidden-xs"></i>
        Process Property Offer
    </h1>
    <p>Process property Offer</p>
</div>

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("ProcessPropertyOfferUpdate", "PropertyManagement", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {

            <h4 class="sample-header">Process Offer</h4>
            <div class="row sample-content" style="margin-left:0;margin-right:0;margin-bottom:20px;">
                @Html.HiddenFor(m => m.OffersId)

                <h3 class="col-sm-offset-3 col-lg-offset-2"><span class="block-arrow">Step 1</span>Call Vendor</h3>
                <div class="form-group">
                    @Html.LabelFor(m => m.Forename, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Forename, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Surname, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Surname, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.OfferDate, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.OfferDate, new { @class = "form-control", @readonly = "readonly", })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.OfferAmount, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.OfferAmount, new { @class = "form-control", @readonly = "readonly", })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <a class="btn btn-success btn-block" style="text-decoration:none;" href="tel:+@Model.VendorMobile"><i class="fa fa-phone"></i> Call Vendor</a>
                    </div>
                </div>
                <h3 class="col-sm-offset-3 col-lg-offset-2"><span class="block-arrow">Step 2</span>Update Status</h3>
                <div class="form-group">
                    @Html.LabelFor(m => m.PropertyOfferStatus, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.EnumDropDownListFor(x => x.PropertyOfferStatus, "Select Title", new { @class = "form-control" })
                    </div>
                </div>

                <h3 class="col-sm-offset-3 col-lg-offset-2"><span class="block-arrow">Step 3</span>Submit</h3>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-block btn-success" value="Submit" />
                    </div>
                </div>

            </div>
        }
    </div>
</div>
