@model EstateAgents.IMS.Models.PropertyManagement.ProcessPropertyViewingViewModel

    <ul class="breadcrumb hidden-xs">
        <li>
            <a href="/Home/Index">Home</a>
        </li>
        <li>
            Property Management
        </li>
        <li>
            <a href="/PropertyManagement/ManageViewings">Manage Viewings</a>
        </li>
        <li>
            Process Property Viewing
        </li>
    </ul>

<div class="jumbotron">
    <h1>
        <i class="fa fa-search-plus text-success hidden-xs"></i>
        Process Property Viewing
    </h1>
    <p>Process property viewing</p>
</div>

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("ProcessPropertyViewingUpdate", "PropertyManagement", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {

            <h4 class="sample-header">Process Viewing</h4>
            <div class="row sample-content" style="margin-left:0;margin-right:0;margin-bottom:20px;">

                <div class="form-group">
                    @Html.LabelFor(m => m.Buyer.Forename, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Buyer.Forename, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Buyer.Surname, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Buyer.Surname, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.PropertyViewing.ViewingDate, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.PropertyViewing.ViewingDate, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.PropertyViewing.ViewingTime, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.PropertyViewing.ViewingTime, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label">Viewing Status</label>

                    <div class="col-md-10">
                        @Html.EnumDropDownListFor(x => x.PropertyViewingStatus, "Select Status", new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-6">
                        <input type="submit" class="btn btn-block btn-success" value="Call Vendor" />
                        <a class="btn btn-success btn-block" style="text-decoration:none;" href="tel:+@Model.VendorMobile">Call Vendor</a>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-6">
                        <input type="submit" class="btn btn-block btn-success" value="Update" />
                    </div>
                </div>

            </div>
        }
    </div>
</div>
